    <h1>Rozplanuj swój budżet</h1>


    <div class="container">


        <div class="row">
            <div class="input-group mt-3" id="budget">
                <span class="input-group-text">Budżet</span>
                <input id="amount" class="form-control" type="number" step="0.01" min="0"
                    aria-label="default input example" name="amount" placeholder="Podaj budżet" required value="">
                <span class="input-group-text">PLN</span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="summary">
                <table id="summary">
                    <thead>
                        <tr>
                            <td scope="col">Budżet</td>
                            <td scope="col">Zapłacono</td>
                            <td scope="col">Pozostało</td>
                        </tr>

                    </thead>
                    <tbody>
                        <tr>
                            <td data-label="Budżet">50000 zł</td>
                            <td data-label="Zapłacono">45000 zł</td>
                            <td data-label="Pozostało">5000 zł</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row justify-content-around mt-3">
            <div class="col-12 col-md-5">
                <table id="allExpenses">
                    <tbody>
                        <tr>
                            <td class="titleOfCategory" scope="col">Ceremonia</td>
                            <td data-label="Ceremonia">0 zł</td>
                        </tr>
                        <tr>
                            <td class="titleOfCategory" scope="col">Panna Młoda</td>
                            <td data-label="Panna Młoda">0 zł</td>
                        </tr>
                        <tr>
                            <td class="titleOfCategory" scope="col">Pan Młody</td>
                            <td data-label="Pan Młody">0 zł</td>
                        </tr>
                        <tr>
                            <td class="titleOfCategory" scope="col">Przyjęcie weselne</td>
                            <td data-label="Przyjęcie weselne">0 zł</td>
                        </tr>

                    </tbody>
                </table>
                <button class="mt-3 mb-3 btn" data-bs-toggle="modal" data-bs-target="#addNewCategory">Dodaj nową
                    kategorię</button>
            </div>

            <div class="col-12 col-md-7">
                <div class="podcategory">
                    <div class="title">
                        <h1>Ceremonia</h1>
                    </div>

                    <form action="#" method="post">

                        <table id="detail">
                            <thead>
                                <tr>
                                    <td scope="col">Wydatek</td>
                                    <td scope="col">Cena</td>
                                    <td scope="col">Zapłacono</td>
                                    <td scope="col">Pozostało</td>
                                </tr>

                            </thead>
                            <tbody>
                                <tr>
                                    <td data-label="Wydatek">Obrączki</td>
                                    <td data-label="Cena">3000 zł</td>
                                    <td data-label="Zapłacono">2000 zł</td>
                                    <td data-label="Pozostało">1000 zł</td>
                                </tr>
                                <tr>
                                    <td data-label="Wydatek">Obrączki</td>
                                    <td data-label="Cena">3000 zł</td>
                                    <td data-label="Zapłacono">2000 zł</td>
                                    <td data-label="Pozostało">1000 zł</td>
                                </tr>
                                <tr>
                                    <td data-label="Wydatek">Obrączki</td>
                                    <td data-label="Cena">3000 zł</td>
                                    <td data-label="Zapłacono">2000 zł</td>
                                    <td data-label="Pozostało">1000 zł</td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                    <button class="mt-3 btn mb-3" data-bs-toggle="modal" data-bs-target="#addNewPodcategory">Dodaj
                        nowy wydatek</button>


                </div>
            </div>
        </div>
    </div>


    <!--Modal window to add new task-->

    <!-- Modal -->
    <div class="modal fade" id="addNewCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Dodaj nową kategorię wydatków</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="...">
                            <label for="floatingInput">Nowe kategoria</label>
                        </div>



                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="cancel" data-bs-dismiss="modal">Close</button>
                    <button type="button" class=" btn btn-success" id="accept">Save changes</button>
                </div>
            </div>
        </div>
    </div>


    <!---->

    <div class="modal fade" id="addNewPodcategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Dodaj nowy wydatek</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="...">
                            <label for="floatingInput">Nowy wydatek</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="number" step="0.01" min="0" class="form-control" id="floatingInput"
                                placeholder="...">
                            <label for="floatingInput">Cena</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="number" step="0.01" min="0" class="form-control" id="floatingInput"
                                placeholder="...">
                            <label for="floatingInput">Zapłacono</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="cancel" data-bs-dismiss="modal">Close</button>
                    <button type="button" class=" btn btn-success" id="accept">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
